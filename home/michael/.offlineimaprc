remoterepository = RemoteSeznam
autorefresh = 10
quick = 5

[Repository LocalSeznam]
type = Maildir
localfolders = ~/.mutt/accountSeznam/mail

[Repository LocalTul]
type = Maildir
localfolders = ~/.mutt/accountTul/mail


[Repository RemoteTul]
