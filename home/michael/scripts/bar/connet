id_active_ethernet=$(nmcli connection show --active | grep "ethernet" | awk -F" " '{print $1}')

if [[ $id_active_ethernet != "" ]]; then
	ip4_ethernet=$(nmcli -g ip4.address connection show $id_active_ethernet)
fi

id_active_wifi=$(nmcli connection show --active | grep "wifi" | awk -F" " '{print $1}')
if [[ $id_active_wifi != "" ]]; then
	ip4_wifi=$(nmcli -g ip4.address connection show $id_active_wifi)
fi
echo -n "W: "$ip4_wifi" E: "$ip4_ethernet
